@model LoginDemo.Models.UserRoles

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row" mt-lg-10>
        <div class="col-4 offset-4 border border-primary rounded p1-5 pr-5 pb-5">
         


            <form method="post" asp-action="LoginUser">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" placeholder="Enter UserName" class="form-control" autocomplete="off" />
                  
                </div>
               
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" placeholder="Enter password " class="form-control" autocomplete="off" />
                   >
                </div>

             

                <div class="form-group">
                    <input type="submit" class="btn btn-success btn-lg mb-3 float-right" value="login" />
                </div>
            </form>
            <div class="text-center">
                <a class="text-primary" asp-action="ForgotUsername">Forgot UserName</a>s
                <a class="text-primary" asp-action="ForgotPassword">Forgot Password</a>

            </div>

        </div>
    </div>
</div>